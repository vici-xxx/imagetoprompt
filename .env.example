# Saasfly Environment Variables Example
# Duplicate this file as .env.local and fill in real values.

# ---------- Core App ----------
# Required: Public app URL (use your Vercel prod URL in production)
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"
# Required for API/Auth flows, must be the same as public URL in production
NEXTAUTH_URL="https://your-app.vercel.app"
# Required: Generate a strong random secret (openssl rand -base64 32)
NEXTAUTH_SECRET="replace-with-strong-secret"

# ---------- OAuth (GitHub) ----------
# Create at https://github.com/settings/developers (OAuth Apps)
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# ---------- Payments (Stripe) ----------
# Get from Stripe Dashboard → Developers → API keys
STRIPE_API_KEY="sk_test_xxx"
# Create a webhook endpoint and copy the signing secret
STRIPE_WEBHOOK_SECRET="whsec_xxx"
# Optional product/price IDs (Stripe Dashboard → Products)
NEXT_PUBLIC_STRIPE_PRO_PRODUCT_ID=""
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PRICE_ID=""
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PRICE_ID=""
NEXT_PUBLIC_STRIPE_BUSINESS_PRODUCT_ID=""
NEXT_PUBLIC_STRIPE_BUSINESS_MONTHLY_PRICE_ID=""
NEXT_PUBLIC_STRIPE_BUSINESS_YEARLY_PRICE_ID=""

# ---------- Email (Resend) ----------
# Get from https://resend.com/ → API Keys
RESEND_API_KEY="re_xxx"
# Verified sender address
RESEND_FROM="noreply@yourdomain.com"

# ---------- Database ----------
# Example format:
# POSTGRES_URL="postgres://{USER}:{PASSWORD}@{DB_HOST}:{DB_PORT}/{DATABASE}"
POSTGRES_URL="postgres://postgres:password@127.0.0.1:5432/saasfly"

# ---------- Optional Settings ----------
ADMIN_EMAIL="admin@yourdomain.com"
IS_DEBUG=""
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Skip env validation during builds (not recommended for production)
SKIP_ENV_VALIDATION=""
